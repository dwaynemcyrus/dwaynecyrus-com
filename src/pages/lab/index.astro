---
import BaseLayout from "../../layouts/BaseLayout.astro"
import { getCollection } from 'astro:content';

const posts = await getCollection('lab');
const pageTitle = "Lab Cyrus"
---
<BaseLayout pageTitle={pageTitle}>
  <h1>Lab</h1>
  <p>Experiments, prototypes, and unfinished ideas at the intersection of AI, design, and systems.</p>

  <ul>
  {posts.map(post => (
    <li><a href={`/lab/${post.id}`}>{post.data.title}</a></li>
  ))}
  </ul>
</BaseLayout>