---
import LinkSection from './LinkSection.astro';
import type { ContentLink } from '../../lib/graph';

interface Props {
  links: ContentLink[];
  heading?: string;
  description?: string;
  emptyLabel?: string;
}

const { links = [], heading, description, emptyLabel } = Astro.props;

// All outbound edges, regardless of sub-kind (body, resources, chains, source, etc.)
const items = links.filter((link) => link.direction === 'outbound');
---

{items.length === 0 ? null : (
  <LinkSection
    heading={heading ?? 'Outbound Links'}
    items={items}
    description={description}
    emptyLabel={emptyLabel ?? 'No outbound links.'}
    showCollection={true}
    showDirection={false}
    showKind={true}
  />
)}
