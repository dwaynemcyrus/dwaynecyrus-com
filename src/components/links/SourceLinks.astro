---
import type { ContentLink } from '../../lib/graph';

interface Props {
  links: ContentLink[];
  heading?: string;
  description?: string;
}

const { links = [], heading, description } = Astro.props;

// Outbound source (citation) links
const items = links.filter(
  (link) => link.direction === 'outbound' && link.kind === 'source'
);
---

{items.length > 0 && (
  <section class="sources">
    <h2>{heading ?? 'Sources'}</h2>

    {description && (
      <p class="sources__description">{description}</p>
    )}

    <ul>
      {items.map((link) => (
        <li>
          <a href={`/${link.collection}/${link.slug}/`}>
            {link.title}
          </a>
        </li>
      ))}
    </ul>
  </section>
)}

<style>
  .sources {
    margin-top: 2rem;
    padding-top: 1rem;
    border-top: 1px solid #e2e8f0;
  }

  .sources h2 {
    font-size: 1.25rem;
    margin-bottom: 1rem;
  }

  .sources__description {
    font-size: 0.95rem;
    margin: 0 0 0.75rem;
    color: #4a5568;
  }

  .sources ul {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .sources li {
    margin-bottom: 0.5rem;
  }

  .sources a {
    color: #00539f;
    text-decoration: none;
  }

  .sources a:hover {
    text-decoration: underline;
  }
</style>
